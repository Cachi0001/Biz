{
  "version": 2,
  "builds": [
    {
      "src": "frontend/bizflow-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/bizflow-backend/src/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/bizflow-backend/src/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/bizflow-frontend/dist/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "backend/bizflow-backend/src"
  },
  "functions": {
    "backend/bizflow-backend/src/main.py": {
      "maxDuration": 30
    }
  }
}


