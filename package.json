{
  "name": "bizflow-sme-nigeria",
  "version": "1.0.0",
  "description": "Comprehensive business management platform for Nigerian SMEs",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend/bizflow-frontend && npm run dev",
    "dev:backend": "cd backend/bizflow-backend && python src/main.py",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend/bizflow-frontend && npm run build",
    "build:backend": "cd backend/bizflow-backend && pip install -r requirements.txt",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend/bizflow-frontend && npm run test",
    "test:backend": "cd backend/bizflow-backend && pytest",
    "test:e2e": "cd frontend/bizflow-frontend && npm run test:e2e",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend/bizflow-frontend && npm run lint",
    "lint:backend": "cd backend/bizflow-backend && flake8 src",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd frontend/bizflow-frontend && npm run format",
    "format:backend": "cd backend/bizflow-backend && black src && isort src",
    "deploy": "./deploy.sh",
    "deploy:production": "./deploy.sh production",
    "deploy:preview": "./deploy.sh preview",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend/bizflow-frontend && npm install",
    "setup:backend": "cd backend/bizflow-backend && python -m venv venv && source venv/bin/activate && pip install -r requirements.txt"
  },
  "keywords": [
    "business-management",
    "sme",
    "nigeria",
    "invoice",
    "inventory",
    "paystack",
    "react",
    "flask",
    "mysql"
  ],
  "author": "Bizflow Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bizflow-sme-nigeria.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/bizflow-sme-nigeria/issues"
  },
  "homepage": "https://bizflow-sme-nigeria.vercel.app",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0",
    "python": ">=3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}